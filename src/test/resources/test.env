# Application Core
SERVER_PORT=8085
SPRING_PROFILES_ACTIVE=test

# Service Configuration
SERVICE_MODULITH_STRICT_ENABLED=true
SERVER_SENT_EVENTS_TIMEOUT_MILLIS=0
SERVER_SENT_EVENTS_MAX_CONNECTIONS=50

# Global Cache Configuration
CACHE_STORE=caffeine

# SSE Cache Configuration
SSE_CACHE_MAX_USERS=100
SSE_CACHE_MAX_CONNECTIONS=500

# SSE Concurrency Configuration
SSE_CONCURRENCY_VIRTUAL_THREADS_LIMIT=100

# SSE Heartbeat Configuration (Fast for testing - 1s for quick test cycles)
SSE_HEARTBEAT_INTERVAL_SECONDS=1
SSE_HEARTBEAT_JITTER_ENABLED=false
SSE_HEARTBEAT_TIMEOUT_SECONDS=2
SSE_HEARTBEAT_EVENT_TYPE=COMMENT
SSE_HEARTBEAT_MAX_FAILURES=3

# Database & Persistence
SERVICE_DATABASE_PROVIDER=mongo
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_INITDB_DATABASE=claude_hooks
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=docker_password
MONGO_AUTHENTICATION_DATABASE=admin
MONGO_AUTO_INDEX_CREATION=true

# Keycloak Configuration (OAuth2 Resource Server HTTPS)
KEYCLOAK_ISSUER_URI=https://localhost:8443/realms/claude-code-hooks

# Security & Authentication
CORS_MAX_AGE_SECONDS=3600
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,https://localhost:3001,https://localhost:8443
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ENABLED_PATHS=/api/v1/claude-code/hooks/events/stream/connect,/api/v1/claude-code/hooks/events/stream/disconnect,/api/v1/claude-code/user/initialize,/api/v1/claude-code/developer/api-key/generate

# Management & Monitoring
MANAGEMENT_HEALTH_SHOW_DETAILS=when_authorized

# Logging Configuration (Verbose for testing)
APPLICATION_LOG_LEVEL_ROOT=INFO
APPLICATION_LOG_LEVEL_CLAUDECODEHOOKS=DEBUG